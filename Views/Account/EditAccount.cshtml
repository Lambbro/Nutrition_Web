@model Nutrition.Models.Account

<link rel="stylesheet" href="~/css/editAccount.css" />

<body>
    @await Html.PartialAsync("~/Views/PartialView/_Header.cshtml")

    <div class="content">
        <h2>Edit Account</h2>

        <form asp-action="EditAccount" method="post">
            <input type="hidden" asp-for="account_id" />

            <div class="form-group">
                <label for="user_name">Họ và tên:</label>
                <input type="text" id="user_name" asp-for="user_name" class="form-control" required />
                <span asp-validation-for="user_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" asp-for="password" class="form-control" required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="account_type">Loại tài khoản:</label>
                <div class="form-check">
                    <input type="checkbox" id="account_type" asp-for="account_type" class="form-check-input" />
                    <label class="form-check-label" for="account_type">Admin</label>
                </div>
                <span asp-validation-for="account_type" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label for="user_id">User ID:</label>
                <input type="number" id="user_id" asp-for="user_id" class="form-control" />
                <span asp-validation-for="user_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="nutritionist_id">Nutritionist ID:</label>
                <input type="number" id="nutritionist_id" asp-for="nutritionist_id" class="form-control" />
                <span asp-validation-for="nutritionist_id" class="text-danger"></span>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a asp-action="ManageAccount" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</body>