@{
    ViewData["Title"] = "Contact Us";
}
<link rel="stylesheet" href="~/css/contact.css" />

<body>
    @await Html.PartialAsync("~/Views/PartialView/_Header.cshtml")

    <div class="content">
        <section class="contact-hero">
            <h1>Liên hệ khi có thắc mắc</h1>
            <p>Chúng tôi rất sẵn lòng nghe những ý kiến từ bạn!</p>
        </section>

        <section class="contact-form-section">
            <div class="form-container">
                <h2>Thêm ý kiến</h2>
                <form action="#" method="post" class="contact-form">
                    <label for="name">Tên của bạn</label>
                    <input type="text" id="name" name="name" placeholder="Điền tên của bạn vào đây" required />

                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Điền email của bạn để chúng tôi sẽ liên lạc" required />

                    <label for="message">Ý kiến</label>
                    <textarea id="message" name="message" rows="5" placeholder="Thêm những góp ý của bạn" required></textarea>

                    <button type="submit" class="submit-btn">Gửi ý kiến</button>
                </form>
            </div>
        </section>

        <section class="contact-info-section">
            <h2>Thông tin liên lạc</h2>
            <div class="info-container">
                <div class="info">
                    <h3>Email</h3>
                    <p>anhdz@gmail.com</p>
                </div>
                <div class="info">
                    <h3>Số điện thoại</h3>
                    <p>+84 1900 10 0biet</p>
                </div>
                <div class="info">
                    <h3>Địa chỉ</h3>
                    <p>96 Dinh Kong, Hoang Mike, Ha Noi</p>
                </div>
            </div>
        </section>
    </div>

    @await Html.PartialAsync("~/Views/PartialView/_Footer.cshtml")
</body>
